to print name n times using recusrion
#include <iostream>
using namespace std;

void name(int i,int n){
    
    if(i<n){
        return;
    }
    cout<<"Tharun"<<endl;
    name(i+1,n);

}

int main(){
    int n;
    int i=1;
    cin>>n;
    name(i,n);
}

to print number from n to 1
#include <iostream>
using namespace std;

void f(int i, int n){
    if (i<1)
    {
        return;
    }
   cout<<i;
   f(i-1,n);
}
int main(){
    int n;
    cin>>n;
    f(n,n);
    return 0;
}
